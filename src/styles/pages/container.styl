@import "../shared/_bootstrap"

global-reset()

*
	margin: 0
	padding: 0

body
	overflow-x: hidden
	-webkit-tap-highlight-color: rgba(0,0,0,0)

	#nav
		position: absolute
		top: 0
		left: 0
		width     : 100%
		height    : 60px
		background: #fff
		z-index   : 1

		.logo
			position: absolute
			top: 18px
			left: 30px
			height  : 24px
			cursor  : pointer

		ul
			width     : 100%
			text-align: center

			li
				font-size: 22px
				display  : inline-block
				margin   : 20px 3%
				cursor   : pointer
				opacity  : 0

				transition-duration: 0.5s

		.social
			position: absolute
			top: 16px
			right: 20px


			a
				display      : inline-block
				border-radius: 999px
				background   : black
				width        : 30px
				height       : 30px
				margin-right : 7px

				transition-duration: 0.5s

				.twitter, .tumblr
					display    : inline-block
					opacity    : 1
					width      : 9px
					height     : 13px
					margin-left: 11px
					margin-top : 8px
					cursor     : pointer

				.twitter
					width      : 13px
					height     : 11px
					margin-left: 9px
					margin-top : 10px

	#container
		position: relative
		min-height: 700px

		#film, #research, #contact
			position: absolute
			top: 0
			left: 0
			width   : 100%
			height  : 100%


body.mobile

	#nav
		position: absolute
		top: 0
		left: 0
		width     : 100%
		height    : 170px
		background: #fff
		z-index   : 1

		.logo
			display : none

		.social
			display: none

		ul li
			font-size: 72px
			margin   : 50px 40px



	