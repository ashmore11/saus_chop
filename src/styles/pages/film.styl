#film
	background: #e7e7e8
	min-width: 610px

	.player
		position  : absolute
		top: 0
		left: 0
		width     : 100%
		height    : 100%
		background: rgba(0,0,0,0.95)
		display   : none

		z-index   : 9999

		iframe
			position: absolute
			top: 50%
			left: 50%
			width      : 700px
			height     : 393px
			margin-left: -350px
			margin-top : -196px
			// display    : none

	.wrapper
		position: absolute
		top: 100px
		left: 16%
		// max-width: 1200px

		h1.title
			text-transform: uppercase
			color         : #bcbdc0
			font-size     : 138px
			line-height   : 120px
			font-weight   : 300

		ul.content
			margin-top: 60px

			li.box
				position      : relative
				width         : 445px
				height        : 295px
				margin-right  : 15px
				margin-bottom : 13px
				display       : inline-block
				background    : #bcbdc0
				font-smoothing: antialiased

				.overlay
					position: absolute
					top: 0
					left: 0
					width     : 100%
					height    : 100%
					background: #fff
					opacity   : 0.5
					z-index   : 1

					transition-duration: 0.5s

				p.title
					position: absolute
					top: 45%
					width      : 100%
					text-align : center
					font-size  : 50px
					line-height: 22px
					z-index    : 2

					transition-duration: 0.5s

					span
						font-size  :  22px
						margin-left: -68px

				.circle
					border-radius: 999px
					position: absolute
					top: 50%
					left: 50%
					width        : 140px
					height       : 140px
					margin-left  : -70px
					margin-top   : -70px
					opacity      : 0
					z-index      : 3

					transition-duration: 0.5s

					p.play
						width     : 100%
						text-align: center
						font-size : 50px
						margin-top: 46px


			li.box.first
				background: url('images/liam_baily_thumb.png') center center
				background-size: cover

				cursor: pointer

				&:hover
					.overlay
						background: #d4d9ed
						opacity   : 1

					p.title
						opacity: 0

					.circle
						opacity: 1
						background: #b0add4

						p.play
							color: #d4d9ed

				.circle p.play
					color: #d4d9ed

				p.title
					color: #b0add4

			li.box.second
				background: url('images/examine_thumb.png') center center
				background-size: cover
				cursor: pointer

				&:hover
					.overlay
						background: #f1e3cd
						opacity   : 1

					p.title
						opacity: 0

					.circle
						opacity: 1
						background: #fde1b2

						p.play
							color: #bcbdc0

				.circle p.play
					color: #bcbdc0

				p.title
					color: #fde1b2

			li.box.third
				background: url('images/viviene_thumb.jpg') center center
				background-size: cover
				// cursor: pointer

				// &:hover
				// 	.overlay
				// 		background: rgb(244,205,216)
				// 		opacity   : 1

				// 	p.title
				// 		opacity: 0

				// 	.circle
				// 		opacity: 1
				// 		background: #fde1b2

				// 		p.play
				// 			color: #bcbdc0

				// .circle p.play
				// 	color: #bcbdc0

				p.title
					color: rgb(244,205,216)

	@media all and (max-width: 1650px), all and ( max-height: 1200px )

		.wrapper
			top: 100px
			// max-width: 900px

			h1.title
				font-size     : 98px
				line-height   : 85px

			ul.content
				margin-top: 60px

				li.box
					width         : 360px
					height        : 250px

	@media all and (max-width: 1200px), all and ( max-height: 1000px )

		.wrapper
			top: 100px
			left: 14%
			// max-width: 900px

			h1.title
				font-size     : 77px
				line-height   : 65px

			ul.content

				li.box
					width         : 300px
					height        : 200px

	@media all and (max-width: 900px), all and ( max-height: 800px )

		.wrapper
			top: 100px
			left: 12%

			h1.title
				font-size     : 55px
				line-height   : 48px

			ul.content

				li.box
					width         : 250px
					height        : 170px


